{% extends 'base.html.twig' %}

{% block title %}{{ parent () }}Renouvelle ton mot de passe{% endblock %}

{% block body %}
    {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1 class="text-primary text-center mb-5">Renouvellement de mot de passe</h1>
    <div class="container mb-5">
        {{ form_start(requestForm) }}
        {{ form_row(requestForm.email) }}
        <div>
            <small>
                Entrer votre adresse email, et nous vous enverrons un email pour renouveller votre mot de passe !
            </small>
        </div>

        <button class="btn btn-primary">Renouveller mon mot de passe</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}